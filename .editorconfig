# Top-most EditorConfig file
root = true

[*]
trim_trailing_whitespace = true
insert_final_newline = true

# Set default charset to UTF-8
[*.{js,py}]
charset = utf-8
indent_style = tab
indent_size = 4

[*.c]
indent_style = tab
indent_size = 4

[*.md]
indent_style = space
indent_size = 2

# Honor python's indentation schema which uses four spaces
[*.py]
indent_style = space
indent_size = 4
